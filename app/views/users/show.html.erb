<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span><%= link_to "view my profile", user_path(@user) %></span>
      <span><%= @user.microposts.count %> microposts</span>
    </section>
    <section>
    	<%= render 'shared/stats' %>
    </section>
  	<%= render 'follow_form' if signed_in? %>
  </aside>
  <div class="span8">
  	<% if @user.microposts.any? %>
  	  <h3>Microposts ( <%= @user.microposts.count %> )</h3>
  	  <ol class="microposts">
   	    <%= render @microposts %>
  	  </ol>
  	  <%= will_paginate @microposts %>
  	<% end %>
  </div>
</div>